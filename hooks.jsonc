  // Example hook config that runs all examples
  // Replace YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN with your Discord webhook
  // Replace /path/to/jxscouthooks with the actual path to this repository
  "global": {
    "asset_saved": {
      "cmd": "DISCORD_WEBHOOK_URL='https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN' /path/to/jxscouthooks/run-all-examples.sh"
    },
    "asset_analyzed": {
      "cmd": "DISCORD_WEBHOOK_URL='https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN' /path/to/jxscouthooks/run-all-examples.sh"
    }
  }

